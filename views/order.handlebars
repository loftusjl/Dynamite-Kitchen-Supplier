<div id='home'>
  <div>
    {{> header}}
  </div>
  <div class='container'>
    <div class='background z-depth-3'>
      <div class='row padIt'>
        <div class='col-8 offset-2'>
          <form class='mb-4' action='GET'>
            <div class='form-group flow-text'>
              <button id='back' class='btn btn-primary right top-back'><a href='/basicuser'>Back</a></button>
              <div>
              <button id='back' class='btn btn-primary right top-back'><a href='#myModal{{this.user}}' class='modal-trigger'>History</a></button>
              {{> modalOldOrder}}
              </div>
              <div>
              <button id='back' class='btn btn-primary right top-back'><a href='#modal{{this.id}}' class='modal-trigger'>Pending
                  Order</a></button>
              {{> modalOrder}}
              </div>
              <h5>Order Search</h5>
              <input type='text' id='order-text' class='form-control' aria-describedby='order-text' placeholder='Enter order Text'>
            </div>
            <button id='submit' class='btn btn-primary right'>Submit</a></button>
          </form>
          <div>
          </div>
          <ul class="pagination">
            <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
            <li class="active page"><a href="#!">1</a></li>
            <li class="waves-effect page"><a href="#!">2</a></li>
            <li class="waves-effect page"><a href="#!">3</a></li>
            <li class="waves-effect page"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
            <button id='logOut' class='btn btn-primary right'>Log out</button>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js'></script>
<script src='/js/index.js'></script>
<script src='/js/products.js'></script>
<script>
$(document).on('hidden.bs.modal', function (e) {
    var target = $(e.target);
    target.removeData('bs.modal')
    .find(".modal-body").html('');
});
</script>